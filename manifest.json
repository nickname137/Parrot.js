{
  "manifest_version": 3,
  "name": "Parrot.js",
  "version": "1.1",
  "description": "Search and download word pronunciations from Forvo.com",

  "permissions": [
    "sidePanel",
    "tabs",
    "storage",
    "downloads",
    "scripting"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Open Forvo Panel"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "host_permissions": [
    "https://forvo.com/*"
  ],

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}

